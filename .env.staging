# STAGING Environment Configuration
# This file contains staging-specific environment variables

# Environment
NODE_ENV=staging
NEXT_PUBLIC_ENVIRONMENT=staging

# Application URLs
NEXT_PUBLIC_APP_URL=https://staging.prisma.madfam.io
CORS_ALLOWED_ORIGINS=https://staging.prisma.madfam.io

# Supabase Configuration (Staging Project)
NEXT_PUBLIC_SUPABASE_URL=your_staging_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_staging_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_staging_supabase_service_role_key

# Database Configuration
POSTGRES_DB=prisma_staging
POSTGRES_USER=prisma_staging
POSTGRES_PASSWORD=your_staging_db_password
DATABASE_URL=postgresql://prisma_staging:your_staging_db_password@staging-db:5432/prisma_staging

# HuggingFace Configuration
HUGGINGFACE_API_KEY=your_staging_huggingface_api_key

# Redis Configuration
REDIS_URL=redis://staging-redis:6379
REDIS_PASSWORD=your_staging_redis_password

# PostHog Analytics (Staging Project)
NEXT_PUBLIC_POSTHOG_KEY=your_staging_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
POSTHOG_PROJECT_ID=your_staging_posthog_project_id

# OAuth Providers (Staging Apps)
LINKEDIN_CLIENT_ID=your_staging_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_staging_linkedin_client_secret
NEXT_PUBLIC_LINKEDIN_CLIENT_ID=your_staging_linkedin_client_id

GITHUB_CLIENT_ID=your_staging_github_client_id
GITHUB_CLIENT_SECRET=your_staging_github_client_secret
GITHUB_APP_ID=your_staging_github_app_id
GITHUB_APP_PRIVATE_KEY=your_staging_github_app_private_key

# Stripe Configuration (Test Mode)
STRIPE_SECRET_KEY=sk_test_your_staging_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_staging_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_staging_webhook_secret

# Monitoring & Observability
SENTRY_DSN=your_staging_sentry_dsn
APM_ENABLED=true
ERROR_TRACKING_ENDPOINT=https://staging-monitoring.prisma.madfam.io/errors
METRICS_ENDPOINT=https://staging-monitoring.prisma.madfam.io/metrics

# Feature Flags & Experiments
ENABLE_FEATURE_FLAGS=true
ENABLE_A_B_TESTING=true
EXPERIMENT_SAMPLING_RATE=1.0

# Security
JWT_SECRET=your_staging_jwt_secret_32_chars_min
CSRF_SECRET=your_staging_csrf_secret_32_chars_min
ENCRYPTION_KEY=your_staging_encryption_key_32_chars

# Performance & Debugging
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DEBUG_LOGGING=true
NEXT_PUBLIC_DEBUG_MODE=true

# CDN & Assets
NEXT_PUBLIC_CDN_URL=https://staging-cdn.prisma.madfam.io
ASSETS_URL=https://staging-assets.prisma.madfam.io

# Third-party Services
IPAPI_KEY=your_staging_ipapi_key
GEOLOCATION_SERVICE_URL=https://staging-geo.prisma.madfam.io

# Build Configuration
ANALYZE=false
NEXT_TELEMETRY_DISABLED=1
SKIP_ENV_VALIDATION=false