# Supabase Configuration
# Copy this file to .env.local and fill in your actual values

# Supabase Project URL (from your Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=your_project_url_here

# Supabase Anon Key (from your Supabase dashboard - safe to expose to client)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Supabase Service Role Key (server-side only - never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# OAuth Providers (optional - for social login)
SUPABASE_AUTH_EXTERNAL_GOOGLE_CLIENT_ID=your_google_client_id
SUPABASE_AUTH_EXTERNAL_GOOGLE_SECRET=your_google_client_secret

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AI Services (for future portfolio enhancement features)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Stripe (for future payment integration)
# STRIPE_SECRET_KEY=your_stripe_secret_key
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key